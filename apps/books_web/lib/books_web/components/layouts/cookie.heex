<div id="cookie-manage" class="modal d-none" data-c-view="manage">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"><%= gettext("Manage Cookies") %></p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <p>
        <%= raw(
          gettext(
            """
            We use cookies to provide a better service,
            as well as to analyze the usage of the website
            in order to offer you a great user experience.
            To learn more about our use of cookies see our
            <a href="%{url}" target="_blank">Privacy Policy</a>.
            """,
            url: Routes.legal_path(@conn, if(@locale == "es", do: :privacy_es, else: :privacy_en))
          )
        ) %>
      </p>

      <div class="field">
        <input data-c-check="necessary" type="checkbox" value="" id="necessary" />
        <label class="form-check-label" for="necessary">
          Necessary
        </label>
      </div>

      <div class="field">
        <input
          data-c-check="marketing"
          data-c-check-default="true"
          type="checkbox"
          value=""
          id="marketing"
        />
        <label class="form-check-label" for="marketing">
          Marketing
        </label>
      </div>

      <div class="field">
        <input data-c-check="performance" type="checkbox" value="" id="performance" />
        <label class="form-check-label" for="performance">
          Performance
        </label>
      </div>
    </section>

    <footer class="modal-card-foot is-justify-content-right">
      <button data-c-action="accept" class="button"><%= gettext("Accept") %></button>
      <button data-c-action="necessary" class="button is-secondary">
        <%= gettext("Necessary") %>
      </button>
      <button data-c-action="all" class="button is-primary"><%= gettext("All") %></button>
    </footer>
  </div>
</div>
